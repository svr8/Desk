{
  "name": "Desk",
  "productName": "Desk",
  "version": "1.1.4",
  "description": "Light-weight IDE",
  "main": "main.js",
  "scripts": {
    "postinstall": "install-app-deps",
    "start": "electron main.js",
    "pack": "build --dir",
    "dist": "build"
  },
  "dest": "release-builds/",
  "icon": "assets/icons/png/256x256.png",
  "categories": [
    "Utility"
  ],
  "lintianOverrides": [
    "changelog-file-missing-in-native-package"
  ],
  "build": {
    "appId": "com.desk.tech",
    "productName": "Desk",
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ]
    },
    "win": {
      "target": "NSIS",
      "icon": "build/icon.ico"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/svr8/Desk.git"
  },
  "keywords": [
    "light-weight",
    "editor",
    "ide"
  ],
  "author": {
    "name": "Shikhar Vaish",
    "email": "shikhar.vaish90@gmail.com",
    "url": "https://github.com/svr8/Desk/"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/svr8/Desk/issues"
  },
  "homepage": "https://github.com/svr8/Desk#readme",
  "devDependencies": {
    "electron": "^2.0.3"
  },
  "dependencies": {
    "electron-json-config": "^1.5.2"
  }
}
